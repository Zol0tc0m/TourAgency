<Page x:Class="PraktLaba5.BookingPayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PraktLaba5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookingPayPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="162*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="34*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="BookingDgr" Grid.ColumnSpan="2"/>
        <TextBox Text="Сумма оплаты" x:Name="PriceTbx" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Button Content="Оформить" Click="Pay_Click"  Grid.Row="2" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
